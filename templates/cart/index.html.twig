{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}

	{# <h1 class="text-center">Mon panier</h1> #}
	<div class="container card shadow mt-3 mb-3">
		<h1>Votre panier</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Image</th>
            <th>Nom</th>
            <th>Quantité</th>
            <th>Prix unitaire</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for item in dataPanier %}
            <tr>
                <td>
                    {% if item.product.image %}
                        <img src="{{ asset('image/produit/' ~ item.product.image) }}" alt="" class="img-fluid" width="100">
                    {% else %}
                        <img src="{{ asset('image/defaut.jpg') }}" alt="" class="img-fluid" width="100">
                    {% endif %}
                </td>
                <td>{{ item.product.nom }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.product.prix | number_format(2, '.', ',') }} €</td>
                <td>{{ (item.product.prix * item.quantity) | number_format(2, '.', ',') }} €</td>
                <td>
                    <form action="{{ path('app_cart_add', { id: item.product.id }) }}" method="POST" style="display:inline-block;">
                        <input type="hidden" name="quantity" value="1">
                        <button type="submit" class="btn btn-sm btn-success">+</button>
                    </form>
                    <form action="{{ path('app_suppanier', { id: item.product.id }) }}" method="POST" style="display:inline-block;">
                        <button type="submit" class="btn btn-sm btn-warning">-</button>
                    </form>
                    <form action="{{ path('app_removepanier', { id: item.product.id }) }}" method="POST" style="display:inline-block;">
                        <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6" class="text-center">Votre panier est vide.</td>
            </tr>
        {% endfor %}
    </tbody>
    {% if dataPanier|length > 0 %}
        <tfoot>
            <tr>
                <td colspan="4" class="text-end"><strong>Total général :</strong></td>
                <td colspan="2"><strong>{{ total | number_format(2, '.', ',') }} €</strong></td>
            </tr>
        </tfoot>
    {% endif %}
</table>
<pre>
    {{ dump() }}
</pre>
{% if app.user %}
    <p>Connecté en tant que <strong>{{ app.user.prenom }}  {{app.user.nom}}</strong></p>

    {# <form action="{{ path('app_commande_valider') }}" method="POST">
        <button type="submit" class="btn btn-success">Valider ma commande</button>
    </form> #}
{% else %}
    <p class="text-warning">Vous devez être connecté pour valider votre commande.</p>
    <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Se connecter</a>
{% endif %}

<a href="{{ path('app_trashpanier') }}" class="btn btn-danger">Vider le panier</a>
<a href="{{ path('app_home') }}" class="btn btn-primary mb-3">Continuer mes achats</a>
