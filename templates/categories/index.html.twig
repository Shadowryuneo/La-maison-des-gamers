{% extends 'base.html.twig' %}

{% block title %}Categories index
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="text-center">Gestion des Catégories</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for category in categories %}
					<tr>
						<td>{{ category.id }}</td>
						<td>{{ category.nom }}</td>
						<td>
							<a class="btn btn-primary" href="{{ path('app_categories_show', {'id': category.id}) }}">voir</a>
							<a class="btn btn-primary" href="{{ path('app_categories_edit', {'id': category.id}) }}">Modifier</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="3">aucune Catégorie n'est enregistrée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a class="btn btn-primary" href="{{ path('app_categories_new') }}">Ajouter une Catégorie</a>
	</div>
{% endblock %}
