{% extends 'base.html.twig' %}

{% block title %}Valider ma commande{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Finaliser ma commande</h1>

    <div class="row">
        <div class="col-md-6">
            <h3>Adresse de livraison</h3>
            {{ form_start(formLivraison) }}
                {{ form_widget(formLivraison) }}
        </div>

        <div class="col-md-6">
            <h3>Adresse de facturation</h3>
            {{ form_start(formFacturation) }} 
                {{ form_widget(formFacturation) }}
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <h3>Résumé de votre panier</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Produit</th>
                        <th>Quantité</th>
                        <th>Prix unitaire</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in panier %}
                        <tr>
                            <td>{{ item.produit.nom }}</td>
                            <td>{{ item.quantity }}</td>
                            <td>{{ item.produit.prix }} €</td>
                            <td>{{ item.quantity * item.produit.prix }} €</td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">Total :</th>
                        <th>{{ total }} €</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-success btn-lg">Valider la commande</button>
    </div>

    
    {{ form_end(formFacturation) }}
    {{ form_end(formLivraison) }}
</div>
{% endblock %}