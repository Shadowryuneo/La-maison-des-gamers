{% extends 'base.html.twig' %}

{% block title %}Commande confirmée{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-body text-center">
            <h1 class="card-title text-success mb-4">Merci pour votre commande !</h1>
            <p class="card-text fs-5">Votre commande <strong>{{ commande.nom }}</strong> a bien été enregistrée.</p>
            <p class="card-text fs-5">Montant total : <strong>{{ commande.prixtotal }} €</strong></p>
            <a href="{{ path('app_home') }}" class="btn btn-outline-primary mt-4">Retour à l'accueil</a>
        </div>
    </div>
</div>
{% endblock %}