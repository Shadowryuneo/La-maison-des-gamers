{% extends "base.html.twig" %}

{% block title %}
	{# {{ parent() }} Catalogue de la catégorie #}
	{{ categorie.nom }}
{% endblock %}

{# {% block h1 %}Catalogue de la catégorie {{ categorie.nom }}{% endblock %} #}

{% block body %}
{# {% block h1 %}  <h1 class="text-center">Catalogue de la catégorie {{ categorie.nom }}</h1>{% endblock %} #}
	<h1 class="text-center mb-3">Catalogue de la catégorie
		{{ categorie.nom }}</h1>

	<div class="container g-3">
		<div class="row">
			{% for produit in produits %}
				<div class=" mt-3 col-md-6 mb-4">
					<div class="shadowBart rounded text-center bg-white p-4 m-3 card">

						<h5 class="card-title">{{ produit.nom|capitalize}}</h5>

						{% if produit.image %}
							<img src="{{ asset('image/produit/' ~ produit.image) }}" title="{{ produit.nom }}" alt="{{ produit.nom }}" class="card-img-top">
						{% else %}
							<img src="{{ asset('image/defaut.jpg') }}" title="image par defaut" alt="image par defaut" class="card-img-top">
						{% endif %}


						{# {% if produit.nom %}
							<p class="fst-italic bold mt-1">{{ produit.nom|upper }}</p>
						{% endif %}  #}

						<p class="text-end mt-3 size20">{{ produit.prix }} €</p>
						<a class="btn btn-dark text-white w-100" href="{{ path('app_categorie_produit', {'id': produit.id })}}">information detaillée</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}
